[user]
  name = Chad Gorshing
  email = gorshing@gmail.com
  signingkey = 334B0E60
[branch]
  autosetupmerge = always
  autosetuprebase = always
[apply]
  whitespace = nowarn
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  safecrlf = true
  eol = lf
[alias]
  contributors = shortlog --summary --numbered
  co = checkout
  ci = commit
  st = status
  br = branch
  d = diff
  ss = status -s
  st = status

  hist = log --pretty=format:'%h %ad | %s %d [%an]' --graph --date=short
  type = cat-file -t
  dump = cat-file -p

  one = log --pretty=format:'%h - %an, %ar : %s'
  pl = log --oneline --decorate --graph
  plall = log --oneline --decorate --all --graph
  ds = diff --staged
  dwd = diff --word-diff
  dcw = diff --color-words
  dswd = diff --staged --word-diff
  dscw = diff --staged --color-words

  sw = switch
  stashall = stash --include-untracked

  # Show verbose output about tags, branches or remotes
  tags = tag -l
  branches = branch --all
  remotes = remote --verbose

  # From https://twitter.com/rakyll/status/1311479159936311299
  undo = reset HEAD~
[color]
  #ui = 1
  ui = auto
  status = auto
  interactive = auto
[color "branch"]
  current = yellow bold
  local = green bold
  remote = cyan bold
[color "diff"]
  whitespace = blue reverse
[gc]
  auto = 1
[push]
  default = simple

[gpg]
  program = /usr/local/bin/gpg
[pull]
  rebase = true

[init]
  defaultBranch = main

[include]
  path = ~/workspaces/dotfiles/.gitconfig-mac
  path = ~/workspaces/dotfiles/.gitconfig-linux
  path = ~/workspaces/dotfiles/.gitconfig-win

# I have a few of these, I just don't want to show publicly
# all the client names I have
[includeIf "gitdir/i:workspaces/clientname/"]
  path = gitconfig.clientname
